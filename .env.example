# Syft Agent Configuration Example
# Copy this file to .env and update with your values

# Application settings
APP_NAME=syft_agent
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# Syftbox settings
SYFTBOX_USER_ID=syftbox_agent
SYFTBOX_USERNAME=Syftbox Agent
# SYFTBOX_EMAIL=your.email@example.com

# WebSocket settings
WEBSOCKET_SERVER_URL=https://distributedknowledge.org
WEBSOCKET_RETRY_ATTEMPTS=3
WEBSOCKET_RETRY_DELAY=5

# Key management
# KEY_DIRECTORY=/path/to/custom/keys
# PRIVATE_KEY_FILENAME=websocket_private.pem
# PUBLIC_KEY_FILENAME=websocket_public.pem

# Threading settings
SCHEDULER_STARTUP_DELAY=0
WEBSOCKET_STARTUP_DELAY=5
